#!@SHELL@

comp=false
cflags=false
omp=false
incl=false
lflags=false
libs=false
mix=false

lang=C

usage () {
	echo ""
	echo "  Usage:  cmbconfig"
	echo "          --comp (print compiler)"
    echo "          --cflags (print compile options)"
    echo "          --omp (print OpenMP flags)"
    echo "          --incl (print include directories)"
    echo "          --lflags (print linking directories)"
    echo "          --libs (print libraries)"
    echo "          --lang < C | CXX | F77 | F90 | MPIC | MPICXX | MPIF77 | MPIF90 >"
    echo "          --mix (FORCE fortran language mixing flags)"
    echo "          [pkg] [pkg] ..."
    echo "          Where packages are one or more of:  "
    echo "            cfitsio, fftw, healpix, healpix_mpi, chealpix, cxxhealpix,"
    echo "            moat, moat_mpi, toast, toast_mpi"
    echo ""
}

docfitsio=false
dofftw=false
dochealpix=false
docxxhealpix=false
dohealpix=false
dohealpix_mpi=false
domoat=false
domoat_mpi=false
dotoast=false
dotoast_mpi=false

while [ $# -gt 0 ]; do
	case "$1" in
		--comp) comp=true;;
		--cflags) cflags=true;;
		--omp) omp=true;;
		--incl) incl=true;;
		--lflags) lflags=true;;
		--libs) libs=true;;
		--mix) mix=true;;
		--lang) lang="$2"; shift;;
		--)	shift; break;;
		-*) usage(); exit 1;;
		cfitsio) docfitsio=true;;
		fftw3) dofftw=true;;
		healpix) dohealpix=true;;
		healpix_mpi) dohealpix_mpi=true;;
		cxxhealpix) docxxhealpix=true;;
		chealpix) dochealpix=true;;
		moat) domoat=true;;
		moat_mpi) domoat_mpi=true;;
		toast) dotoast=true;;
		toast_mpi) dotoast_mpi=true;;
		*) break;;	# terminate while loop
	esac
	shift
done

# set up dependencies

if [ dotoast_mpi = true ]; then
	dotoast=true
	domoat_mpi=true
fi

if [ domoat_mpi = true ]; then
	domoat=true
fi

if [ dotoast = true ]; then
	domoat=true
	docfitsio=true
fi

if [ domoat = true ]; then
	dofftw=true
fi

if [ dohealpix_mpi = true ]; then
	dohealpix=true
fi

if [ dohealpix = true ]; then
	docfitsio=true
fi

if [ dochealpix = true ]; then
	docfitsio=true
fi

if [ docxxhealpix = true ]; then
	docfitsio=true
fi

total=""

if [ comp = true ]; then
	if [ lang = "C" ]; then
		total="${total}${HPCP_CC} "
	elif [ lang = "CXX" ]; then
		total="${total}${HPCP_CXX} "
	elif [ lang = "F77" ]; then
		total="${total}${HPCP_F77} "
	elif [ lang = "F90" ]; then
		total="${total}${HPCP_FC} "
	elif [ lang = "MPIC" ]; then
		total="${total}${HPCP_MPICC} "
	elif [ lang = "MPICXX" ]; then
		total="${total}${HPCP_MPICXX} "
	elif [ lang = "MPIF77" ]; then
		total="${total}${HPCP_MPIF77} "
	elif [ lang = "MPIF90" ]; then
		total="${total}${HPCP_MPIFC} "
	else
		echo "invalid language"
		exit 1
	fi
fi

if [ cflags = true ]; then
	if [ lang = "C" ]; then
		total="${total}${HPCP_CFLAGS} "
	elif [ lang = "CXX" ]; then
		total="${total}${HPCP_CXXFLAGS} "
	elif [ lang = "F77" ]; then
		total="${total}${HPCP_FFLAGS} "
	elif [ lang = "F90" ]; then
		total="${total}${HPCP_FCFLAGS} "
	elif [ lang = "MPIC" ]; then
		total="${total}${HPCP_CFLAGS} "
	elif [ lang = "MPICXX" ]; then
		total="${total}${HPCP_CXXFLAGS} "
	elif [ lang = "MPIF77" ]; then
		total="${total}${HPCP_FFLAGS} "
	elif [ lang = "MPIF90" ]; then
		total="${total}${HPCP_FCFLAGS} "
	else
		echo "invalid language"
		exit 1
	fi
fi

inc=""

if [ incl = true ]; then
	if [ dotoast = true ]; then
		inc="${toast_CPPFLAGS} ${inc}"
	fi
	if [ domoat = true ]; then
		inc="${moat_CPPFLAGS} ${inc}"
	fi
	if [ dohealpix = true ]; then
		inc="${healpix_CPPFLAGS} ${inc}"
	fi
	if [ dochealpix = true ]; then
		inc="${healpix_CPPFLAGS} ${inc}"
	fi
	if [ docxxhealpix = true ]; then
		inc="${healpix_CPPFLAGS} ${inc}"
	fi
	if [ dofftw = true ]; then
		inc="${fftw_CPPFLAGS} ${inc}"
	fi
	if [ docfitsio = true ]; then
		inc="${cfitsio_CPPFLAGS} ${inc}"
	fi
fi

total="${total}${inc} "

ld=""

if [ lflags = true ]; then
	if [ dotoast = true ]; then
		ld="${toast_LDFLAGS} ${ld}"
	fi
	if [ domoat = true ]; then
		ld="${moat_LDFLAGS} ${ld}"
	fi
	if [ dohealpix = true ]; then
		ld="${healpix_LDFLAGS} ${ld}"
	fi
	if [ dochealpix = true ]; then
		ld="${healpix_LDFLAGS} ${ld}"
	fi
	if [ docxxhealpix = true ]; then
		ld="${healpix_LDFLAGS} ${ld}"
	fi
	if [ dofftw = true ]; then
		ld="${fftw_LDFLAGS} ${ld}"
	fi
	if [ docfitsio = true ]; then
		ld="${cfitsio_LDFLAGS} ${ld}"
	fi
fi

total="${total}${ld} "

link=""

if [ libs = true ]; then
	if [ dotoast_mpi = true ]; then
		if [ lang = "MPIC" ]; then
			link="${link}${toast_LIBS_MPICC} "
		elif [ lang = "MPICXX" ]; then
			link="${link}${toast_LIBS_MPICXX} "
		elif [ lang = "MPIF90" ]; then
			link="${link}${toast_LIBS_MPIFC} "
			mix=true
		fi
	fi
	if [ dotoast = true ]; then
		if [ lang = "C" ]; then
			link="${link}${toast_LIBS_CC} "
		elif [ lang = "CXX" ]; then
			link="${link}${toast_LIBS_CXX} "
		elif [ lang = "F90" ]; then
			link="${link}${toast_LIBS_FC} "
			mix=true
		fi
	fi
	if [ domoat_mpi = true ]; then
		link="${link}${moat_LIBS_MPICXX} "
	fi
	if [ domoat = true ]; then
		link="${link}${moat_LIBS_CXX} "
	fi
	if [ dohealpix_mpi = true ]; then
		link="${link}${healpix_LIBS_MPIFC} "
	fi
	if [ dohealpix = true ]; then
		link="${link}${healpix_LIBS_FC} "
		if [ lang = "C" ]; then
			mix=true
		elif [ lang = "CXX" ]; then
			mix=true
		fi
	fi
	if [ dochealpix = true ]; then
		link="${link}${healpix_LIBS_CC} "
	fi
	if [ docxxhealpix = true ]; then
		link="${link}${healpix_LIBS_CXX} "
	fi
	if [ dofftw = true ]; then
		link="${link}${fftw_LIBS_CC} "
	fi
	if [ docfitsio = true ]; then
		link="${link}${cfitsio_LIBS_CC} "
	fi
fi

total="${total}${link} "


if [ mix = true ]; then
	if [ lang = "C" ]; then
		total="${total}${HPCP_FCLIBS} ${HPCP_FLIBS} "
	elif [ lang = "CXX" ]; then
		total="${total}${HPCP_FCLIBS} ${HPCP_FLIBS} "
	elif [ lang = "MPIC" ]; then
		total="${total}${HPCP_MPIFCLIBS} ${HPCP_MPIFLIBS} ${HPCP_FCLIBS} ${HPCP_FLIBS} "
	elif [ lang = "MPICXX" ]; then
		total="${total}${HPCP_MPIFCLIBS} ${HPCP_MPIFLIBS} ${HPCP_FCLIBS} ${HPCP_FLIBS} "
	fi
fi

if [ omp = true ]; then
	total="${total}${HPCP_OMPFLAGS} "
fi

echo ${total}

exit 0

